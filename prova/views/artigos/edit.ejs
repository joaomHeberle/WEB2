<%-include('../partials/head') %>
<%-include('../partials/header') %>

    <h3>Editar Artigo</h3>
    <form action="/artigos/<%= artigo._id %>/edit?_method=PUT" method="post">
    <fieldset class="m-2 mb-2 p-2">
        <legend class ="clear">Dados do Artigo</legend>
    <label for="titulo">Título:</label>
    <input type="text" name="titulo" class="text" value="<%= artigo.titulo %> " placeholder="Título">
    <label for="imagem">Imagem:</label>
    <input type="text" name="imagem" class="text"value="<%= artigo.imagem %>" placeholder="Nome do arquivo de imagem">
    <label for="conteudo">Texto</label>
    <textarea placeholder="Texto do artigo" name="conteudo"  class="text textArea"><%= artigo.conteudo %></textarea>
</fieldset>
<button class="btnADM red"><a href="/logout" class="red" id="cancelar">Cancelar</a></button>
<button class="btnADM gre">Salvar</button><br>

</form>

<form action="/artigos/deletar/<%=artigo._id%>?_method=DELETE" onclick="confirmaAlert()" id="confirmaDelete" method="post">
<button class="btnADM redEdit mt-3">Apagar</button>
</form>
<%-include('../partials/footer') %>
