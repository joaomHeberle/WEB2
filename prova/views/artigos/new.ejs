    <h3>Cadastrar novo Artigo</h3>
    <form action="/artigos/new" method="post">
    <fieldset class="m-2 mb-2 p-2">
        <legend class ="clear">Dados do Artigo</legend>
    <label for="titulo">Título:</label>
    <input type="text" name="titulo" class="text" placeholder="Título">
    <label for="imagem">Imagem:</label>
    <input type="text" name="imagem" class="text" placeholder="Nome do arquivo de imagem">
    <label for="conteudo">Texto</label>
    <textarea placeholder="Texto do artigo" name="conteudo" class="text textArea"></textarea>
</fieldset>
<button class="btnADM red"><a href="/administracao" class="red">Cancelar</a></button>
<button class="btnADM gre">Cadastrar</button>
</form>
